$('[class*="line-item"]').bind('ajax:success', function(){
  var lineItem = $(this);

  lineItem.animate({opacity: 0}, 100, function() {
      lineItem.animate({height: 0, margin: 0}, 100);
  });
});

$("#cart-icon").on('ajax:success').html('<%= current_cart.total_price %> UA');
$("#cart-total-price").on('ajax:success').html('<%= current_cart.total_price %> UA');
<% if current_user %>
  $("#total-bonuses").on('ajax:success').html('<%= current_user.user_balance.balance %> Bon');
<% end %>
