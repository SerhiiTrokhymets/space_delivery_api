<div class='list'>
  <% @category.products.each do |product| %>
    <div class='product'>
      <div class='title'>
        <%= product.title %>
      </div>
      <div class='weight'>
        <%= product.product_types.first.weight %> грам
      </div>
      <div class='image'>
        <%= image_tag product.picture.image_name.url(:large) %>
      </div>

      <div class='button'>
        <% product.product_types.each do |product_type|%>
          <%= link_to add_product_cart_path(product_type), method: :put, style: 'text-decoration: none' do %>
            <div class="ui vertical animated button" tabindex="0">
              <div class="hidden content">
                <%= product_type.weight %>гр.
              </div>
              <div class="visible content">
                <%= product_type.price %> $
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>