<div class="list-l">
  <div class='categories-list'>
    <% @categories.each do |category| %>
      <div class='categories-item-title'>
        <%= link_to category.title, category_path(category), class: "#{'active' if current_page? category_path(category)} item", style: 'text-decoration: none' %>
      </div>
    <% end %>
  </div>
</div>