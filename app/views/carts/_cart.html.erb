<div class='cart'>
  <%= render cart.line_items %>

  <div class='cart-footer'>
    <div class='cart-order-button'>
      <%= link_to new_order_path, style: 'text-decoration: none; color: white;' do %>
        Proceed to Checkout
      <% end %>
    </div>
    <div class='cart-total-price'>
      <p>Total price:</p>
      <p id='cart-total-price'><%= number_to_currency cart.total_price %></p>
    </div>
  </div>
</div>