<div class='cart-footer'>
  <div class='cart-order-button' id='order-button'>
    <%= link_to new_order_path, style: 'text-decoration: none; color: white;' do %>
      Proceed to Checkout
    <% end %>
  </div>
  <div class='cart-total-price'>
    <span>Total price:</span>
    <span id='cart-total-price'><%= current_cart.total_price %> UA</span>
  </div>

  <script>
    $('#order-button').click(function() {
        var unpublishedItem = $('.unpublished-line-item');
        var deletedUnpublishedItem = $('.unpublished-line-item[style="display: none;"]');
        if (unpublishedItem.length > deletedUnpublishedItem.length) {
          return false;
        }
      });
  </script>
</div>